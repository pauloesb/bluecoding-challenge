<div class="card-container index">
    <h1>BC Link Shortener</h1>
    <%= form_for @url do |f| %>
        <%= f.label :original_url do %>
            Insert Url to Shorten:
            <%= f.text_field(:original_url)  %>
        <% end %>
        <br/>
        <div class="submit-container">
        <%= f.submit "Submit", class: "btn-submit" %>
        </div>
    <% end %>
    <div class="link-container">
        <%= link_to "Top 100", top_100_path %>
    </div>
</div>
